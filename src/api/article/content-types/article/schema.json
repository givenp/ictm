{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "authors": {
      "type": "string",
      "required": true
    },
    "doi": {
      "type": "uid",
      "required": true
    },
    "publicationDate": {
      "type": "date",
      "required": true
    },
    "abstract": {
      "type": "blocks"
    },
    "pdf": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "keywords": {
      "type": "string",
      "required": true
    }
  }
}
